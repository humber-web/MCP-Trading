# Server Configuration
PORT=3000
NODE_ENV=production

# Enable/Disable Web Interface (set to 'false' for MCP-only mode)
ENABLE_WEB=true

# Trading Configuration
INITIAL_BALANCE=10000
MAX_POSITION_SIZE=0.20
STOP_LOSS_PERCENT=0.05
TAKE_PROFIT_PERCENT=0.15
TRADING_FEE=0.001

# Order Monitoring
MONITORING_FREQUENCY_MS=10000

# API Configuration
COINGECKO_BASE_URL=https://api.coingecko.com/api/v3
COINGECKO_TIMEOUT=10000

# Cache Configuration
CACHE_TTL_PRICE=30
CACHE_TTL_ANALYSIS=300
CACHE_TTL_MARKET=60

# ============================================
# EXCHANGE CONFIGURATION
# ============================================

# Trading Mode: PAPER (safe, simulated) or LIVE (real money)
# Default: PAPER
TRADING_MODE=PAPER

# Exchange to use in LIVE mode: binance, coinbase, kraken
# For PAPER mode, this is ignored
EXCHANGE_NAME=paper

# ============================================
# BINANCE API CREDENTIALS
# ============================================
# Get API keys from: https://www.binance.com/en/my/settings/api-management
# For testnet: https://testnet.binance.vision/
#
# IMPORTANT: Never commit real API keys to git!
#

# Binance API Key
# BINANCE_API_KEY=your_api_key_here

# Binance API Secret
# BINANCE_API_SECRET=your_api_secret_here

# ============================================
# COINBASE API CREDENTIALS (Coming Soon)
# ============================================
# COINBASE_API_KEY=your_coinbase_key
# COINBASE_API_SECRET=your_coinbase_secret

# ============================================
# SAFETY CONFIRMATION FOR LIVE TRADING
# ============================================
# This MUST be set to 'true' to enable LIVE trading mode
# This is a safety measure to prevent accidental live trading
# CONFIRM_LIVE_TRADING=true

# ============================================
# NOTIFICATION CONFIGURATION
# ============================================
# Telegram Bot Token (for trade notifications)
# Get from: https://t.me/BotFather
# TELEGRAM_BOT_TOKEN=your_bot_token_here

# Your Telegram Chat ID (to receive notifications)
# Get from: https://t.me/userinfobot
# TELEGRAM_CHAT_ID=your_chat_id_here
